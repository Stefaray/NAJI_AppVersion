
.other_login{
	margin: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.phone_icon{
	
	width: 100rpx;
	height: 100rpx;
}
.divideLine{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-align-content: center;
	        align-content: center;	
	margin-top: 50rpx;
	margin-bottom: 50rpx;
}
.line{
	
	height: 0rpx;
	background-color: #DDDDDD;
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	        flex-grow: 1;
}
.total-lebal{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.zai-box{
	padding: 0 100rpx;
	position: relative;
}
.zai-logo{
	width: 100%;
	width: 100%;
	height: 310rpx;
}
.zai-title{
	position: absolute;
	top: 0;
	line-height: 360rpx;
	font-size: 68rpx;
	color: #fff;
	text-align: center;
	width: 100%;
	margin-left: -100rpx;
}
.zai-form{
	margin-top: 100rpx;
}
.zai-input{
	background: #e2f5fc;
	margin-top: 30rpx;
	-webkit-border-radius: 100rpx;
	        border-radius: 100rpx;
	padding: 20rpx 40rpx;
	font-size: 36rpx;
}
.input-placeholder, .zai-input{
	color: #94afce;
}
.zai-label1{
	padding: 60rpx 0;
	text-align: center;
	color: #a7b6d0;
	font-size: 30rpx;
}
.zai-label2{
	padding: 60rpx 0;
	text-align: right;
	color: #a7b6d0;
	font-size: 30rpx;
}
.zai-btn{
	background: #ff65a3;
	color: #fff;
	border: 0;
	-webkit-border-radius: 100rpx;
	        border-radius: 100rpx;
	font-size: 36rpx;
}
.zai-btn:after{
	border: 0;
}
/*按钮点击效果*/
.zai-btn.button-hover{
	-webkit-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

